@using RCLAPI
@using RCLAPI.Services
@inject IApiServices ApiServices

<div class="header-container">
    <div class="header-main">
        <div>
            <span class="logo-span">
                <a class="logo-span" href="/">
                    @AppConfig.tituloHomePage
                </a>
            </span>
        </div>
        <div class="nav-main">
            <BtnCarrinho />
            <BtnHabituais />
            <LocationComponent />
        </div>

        @if (!isLoading && !string.IsNullOrEmpty(userID)) 
        {
            if (string.Equals(userRole, "Fornecedor", StringComparison.OrdinalIgnoreCase))
            {
                <BtnFornecedorProdutosDisponiveis />
                <BtnFornecedorProdutosEditar />
                <BtnFornecedorVendas />
            }
            else
            {
                <BtnCompras />
            }
            <BtnLogout />
        }
        else if (!isLoading)
        {
            <BtnLogin />
            <BtnRegister />
        }
    </div>
</div>

@code {
    private string? userID;
    private string? userRole;
    private bool isLoading = true;  // Flag para controlar o carregamento do estado

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Carrega o userID e o role a partir do token armazenado
            userID = await ApiServices.GetUserIdFromTokenAsync();
            userRole = await ApiServices.GetRoleFromTokenAsync();

            // Atribui false após o carregamento ser concluído
            isLoading = false;

            // Força a atualização da página após o carregamento do userID
            StateHasChanged();
        }
    }
}
